
@{
    ViewData["Title"] = "AddItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <!-- Select2 -->
    <link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">

}


<form class="needs-validation" novalidate>
    <section class="content">

        <div class="card card-primary">
            <div class="card-body">
                <div class="col-md-12">
                    <!-- Form Element sizes -->
                    <div>
                        <div class="d-flex justify-content-between align-items-center">
                            <h4><b><u>Add Item:</u></b></h4>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="Base Name">Base Name</label>
                        <input type="text" id="Base Name" placeholder="Base Name" class="form-control">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="Item Name">Item Name</label>
                        <input type="text" id="Item Name" placeholder="Item Name" class="form-control">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="Unit">Unit</label>
                        <select id="Unit" class="form-control custom-select js-example-basic-single" name="Unit">

                            <option value="">Select Unit</option>
                            <option value="Unit2">Unit2</option>
                            <option value="Unit3">Unit3</option>
                            <option value="Unit4">Unit4</option>
                            <option value="Unit5">Unit5</option>
                            <option value="Unit6">Unit6</option>
                            <option value="Unit7">Unit7</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="Re-Order Level">Re-Order Level</label>
                        <input type="text" id="Re-Order Level" placeholder="Re-Order Level" class="form-control">
                    </div>
                    
                </div>
                <div class="col-2">
                    <a href="\Inventory\AddItem" class="btn btn-secondary float-left" style="margin-right: 10px;">Cancel</a>
                    <a href="\Inventory\Item" type="Submit" class="btn btn-success float-left">Submit</a>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
    </section>
</form>


@section scripts{
    <!-- Select2 -->
    <script src="~/plugins/select2/js/select2.full.min.js"></script>


    <script>
        $(document).ready(function () {
            $('.js-example-basic-single').select2();
        });
    </script>
    }
