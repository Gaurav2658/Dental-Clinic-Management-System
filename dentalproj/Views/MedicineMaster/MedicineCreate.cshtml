@model DataAccessLibrary.Model.MedicineMaster.MedicineMaster

@{
    ViewData["Title"] = "MedicineCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-primary">
    <div class="card-body">
        <div class="col-md-12">
            <!-- Form Element sizes -->
            <div>
                <div class="d-flex justify-content-between align-items-center">
                    <h4><b><u>Add Medicine:</u></b></h4>
                </div>
            </div>
        </div>
        <div>
            <form class="needs-validation" asp-action="MedicineCreate" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                     <div class="form-group col-md-4">
                        <label asp-for="Dosage">Dosage</label>
                        <input asp-for="Dosage" class="form-control" />
                        <span asp-validation-for="Dosage" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Instruction">Instruction</label>
                        <input asp-for="Instruction" class="form-control" />
                        <span asp-validation-for="Instruction" class="text-danger"></span>
                    </div>
                   

             @*       <div class="form-group col-md-4">
                        <label asp-for="CreatedDate">Created Date</label>
                        <input asp-for="CreatedDate" class="form-control" />
                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="CreatedBy">Created By</label>
                        <input asp-for="CreatedBy" class="form-control" />
                        <span asp-validation-for="CreatedBy" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="ModifyDate">Modify Date</label>
                        <input asp-for="ModifyDate" class="form-control" />
                        <span asp-validation-for="ModifyDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="ModifyBy">Modify By</label>
                        <input asp-for="ModifyBy" class="form-control" />
                        <span asp-validation-for="ModifyBy" class="text-danger"></span>
                    </div>*@
                    <div class="form-group col-md-4" style="padding: 35px 0px 0px 0px;">
                        <label asp-for="IsActive">Active</label>
                        <input asp-for="IsActive" type="checkbox" />
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-2">
                    <input type="submit" value="Save" class="btn btn-success float-left" style="margin-right: 10px;" />
                    <a href="\MedicineMaster\GetAllMedicine" class="btn btn-secondary float-left" style="margin-right: 10px;">Back</a>

                </div>
            </form>
        </div>
    </div>
    <!-- /.card-body -->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
