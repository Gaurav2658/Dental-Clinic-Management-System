@model DataAccessLibrary.Model.ServiceMaster.ServiceMaster

@{
    ViewData["Title"] = "ServiceCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card card-primary">
    <div class="card-body">
        <div class="col-md-12">
            <!-- Form Element sizes -->
            <div>
                <div class="d-flex justify-content-between align-items-center">
                    <h4><b><u>Add Service:</u></b></h4>
                </div>
            </div>
        </div>
        <div>
            <form class="needs-validation" asp-action="ServiceCreate" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Description">Description</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Amount">Amount</label>
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="OrderBy">OrderBy</label>
                        <input asp-for="OrderBy" class="form-control" />
                        <span asp-validation-for="OrderBy" class="text-danger"></span>
                    </div>

                    
                    <div class="form-group col-md-4" style="padding: 35px 0px 0px 0px;">
                        <label asp-for="IsActive">Active</label>
                        <input asp-for="IsActive" type="checkbox" />
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-2">
                    <input type="submit" value="Save" class="btn btn-success float-left" style="margin-right: 10px;" />
                    <a href="\ServiceMaster\GetAllService" class="btn btn-secondary float-left" style="margin-right: 10px;">Back</a>

                </div>
            </form>
        </div>
    </div>
    <!-- /.card-body -->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
